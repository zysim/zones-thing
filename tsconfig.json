{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "outDir": "build",
        "sourceMap": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "client/**/*.ts",
        "src/**/*.ts"
    ]
}
